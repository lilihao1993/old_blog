<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:mvc="http://www.springframework.org/schema/mvc"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.2.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd"> 
	
	<!-- 扫描controller（controller层注入） -->
   <context:component-scan base-package="system.controller,system.service"/>
   <mvc:annotation-driven/>

   	<!-- 默认进入页面，以及错误页面配置 -->
   	<mvc:view-controller path="/" view-name="index"/>
	<mvc:view-controller path="/error404" view-name="error404"/>
	<mvc:view-controller path="/error500" view-name="error500"/>
	
	
	<!--静态资源配置-->
	<!--cache-period为静态资源设置的换成时间   单位:秒  -->
	<mvc:resources mapping="/css/**" location="/WEB-INF/views/css/" cache-period="1"/>
	<mvc:resources mapping="/js/**" location="/WEB-INF/views/js/" cache-period="1"/>
	<mvc:resources mapping="/img/**" location="/WEB-INF/views/img/" cache-period="1"/>
	<mvc:resources mapping="/font/**" location="/WEB-INF/views/font/" cache-period="1"/>
	
